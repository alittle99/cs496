<body>



<div role="main">
    <div class="container">

        

        <section id="directives-calendar" ng-controller="CalendarCtrl">

            
            <!--modal template-->
        <div ng-controller="ModalCtrl as $ctrl" class="modal-demo">
            <script type="text/ng-template" id="myModalContent.html">
                <div class="modal-header">
                    <h3 class="modal-title" id="modal-title">I'm a modal!</h3>
                </div>
                
                <div class="modal-body" id="modal-body">

                    <select ng-model="appointment.tutor" class="form-control" ng-trim="true" >
                        <option ng-repeat="option in tutorOptions track by option._id">
                            {{option}}
                        </option>
                    </select>
                    </br>
                    <select ng-model="appointment.student" class="dropdown-menu" ng-trim="true">
                        <option ng-repeat="option in studentOptions track by option._id">
                            {{option}}
                        </option>
                    </select>

                    Selected: <b>{{ $ctrl.selected.item }}</b>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-primary" type="button" ng-click="$ctrl.ok()">OK</button>
                    <button class="btn btn-warning" type="button" ng-click="$ctrl.cancel()">Cancel</button>
                </div>
            </script>
            <button type="button" class="btn btn-default" ng-click="$ctrl.open()">Open me!</button>
        </div>
        <!--modal-->
<!---->
            <!--TODO: normal bootstrap Modal, can't get it working' -->
            <!--would be nice to just not use the angular-bootstrap stuff at all if possible-->
            <!--kind of a headache...-->
            <!--https://getbootstrap.com/javascript/#modals-->
            <!-- Small modal -->
            
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#bs-example-modal-sm">Small modal</button>
            <div id="bs-example-modal-sm" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
                <div class="modal-dialog modal-sm" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h4 class="modal-title" id="myModalLabel">Floppy Flapjacks</h4>
                        </div>
                        <!--this works-->
                        <select ng-model="appointment.student" class="form-control" ng-trim="true">
                            <option ng-repeat="option in studentOptions track by option._id">
                                {{option}}
                            </option>
                        </select>
                        
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>
            
            <div>
                <h1>UI-Calendar</h1>
            </div>

            <div class="row-fluid">
                <div class="col-sm-4">
                        
                    <div class="btn-group calTools">
                        <button class="btn" ng-click="changeLang()">
                            {{changeTo}}
                        </button>              
                        <button class="btn" ng-click="addRemoveEventSource(eventSources,eventSource)">
                            Toggle Source
                        </button>
                        <button type="button" class="btn btn-primary" ng-click="addEvent()">
                            Add Event
                        </button>
                    </div>
                    
                    <% /*TODO: This list looks really gross*/ %>
                    <li ng-repeat="e in events">
                        <div class="alert alert-info">
                            {{e.start | date:"MMM dd"}} - {{e.end | date:"MMM dd"}}
                            </br>
                            <b> <input ng-model="e.title"></b>
                            <a ng-click="remove($index)" class="pull-right"><i class="fa fa-times-circle-o"></i></a>
                        </div>
                    </li>
                </div>

                <!---->

                <div class="col-sm-8">
                    
                    <i class="fa fa-bell"></i> ATutorElete Calendar
                    <div class="alert-success calAlert" ng-show="alertMessage != undefined && alertMessage != ''">
                        <h4>{{alertMessage}}</h4>
                    </div>
                    <div class="btn-toolbar">
                        <!--<p class="pull-right lead">Calendar One View Options</p>-->
                        <div class="btn-group">
                            <button class="btn btn-success" ng-click="changeView('agendaDay', 'myCalendar')">AgendaDay</button>
                            <button class="btn btn-success" ng-click="changeView('agendaWeek', 'myCalendar')">AgendaWeek</button>
                            <button class="btn btn-success" ng-click="changeView('month', 'myCalendar')">Month</button>
                        </div>
                    </div>
                        
                    <div id="myCalendar" class="calendar" ng-model="eventSources" calendar="myCalendar" ui-calendar="uiConfig.calendar"></div>
                </div>

            </div>
        </section>
    </div>
</div>

</body>

